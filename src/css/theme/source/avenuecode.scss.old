// Default mixins and settings -----------------
@import "../template/mixins";
@import "../template/settings";
// ---------------------------------------------

// Include theme-specific fonts
@font-face {
  font-family: 'Quicksand';
  font-style: normal;
  font-weight: 400;
  src: url('../../font/quicksand-regular.eot');
  src: url('../../font/quicksand-regular.eot?#iefix') format('embedded-opentype'),
       url('../../font/quicksand-regular.woff') format('woff'),
       url('../../font/quicksand-regular.ttf') format('truetype');
}
@font-face {
  font-family: 'Quicksand';
  font-style: normal;
  font-weight: 700;
  src: url('../../font/quicksand-bold.eot');
  src: url('../../font/quicksand-bold.eot?#iefix') format('embedded-opentype'),
       url('../../font/quicksand-bold.woff') format('woff'),
       url('../../font/quicksand-bold.ttf') format('truetype');
}

@import url(https://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic);

// Override theme settings (see ../template/settings.scss)
$heading1TextShadow: 0 1px 0 #ccc, 0 2px 0 #c9c9c9, 0 3px 0 #bbb, 0 4px 0 #b9b9b9, 0 5px 0 #aaa, 0 6px 1px rgba(0,0,0,.1), 0 0 5px rgba(0,0,0,.1), 0 1px 3px rgba(0,0,0,.3), 0 3px 5px rgba(0,0,0,.2), 0 5px 10px rgba(0,0,0,.25), 0 20px 20px rgba(0,0,0,.15);

// Background generator
@mixin bodyBackground() {
	@include radial-gradient( rgba(28,30,32,1), rgba(85,90,95,1) );
}



// Theme template ------------------------------
@import "../template/theme";
// ---------------------------------------------

.reveal.center {
  background: #415b77;
  background: -moz-radial-gradient(center, circle cover, #415b77 0%, #2c3e50 100%);
  background: -webkit-gradient(radial, center center, 0px, center center, 100%, color-stop(0%, #415b77), color-stop(100%, #2c3e50));
  background: -webkit-radial-gradient(center, circle cover, #415b77 0%, #2c3e50 100%);
  background: -o-radial-gradient(center, circle cover, #415b77 0%, #2c3e50 100%);
  background: -ms-radial-gradient(center, circle cover, #415b77 0%, #2c3e50 100%);
  background: radial-gradient(center, circle cover, #415b77 0%, #2c3e50 100%);
  background-color: #2c3e50;

  .slides {
    section {
      min-height: 100%;

      img.logo {
        max-height: 250px;
        border: 0;
      }

      pre {
        min-width: 800px;
      }

      img.avatar {
        -webkit-border-radius: 10px;
        -moz-border-radius: 10px;
        border-radius: 10px;
        border: 2px solid black;
      }

      ul.full {
        width: 100%;
      }

      img.icon {
        max-height: 250px;
        max-width: 250px;
        border: 0;
        background: none;
        position: absolute;
        right: 0;
        box-shadow: none;
      }

      em {
        color: #f90 !important;
        font-style: normal;
      }

      div.footer {
        position: absolute;
        width: 800px;
        z-index: 999;
        left: 0;
        bottom: 20px;
        color: #ccc;
        height: 46px;
        text-align: left;
        margin-bottom: 20px;

        * {
          font-size: 24px;
          text-align: left;
        }

        hr {
          margin: 5px 0;
        }
      }

      img.ac-logo {
        position: absolute;
        max-height: none;
        max-width: none;
        width: 153px;
        height: 109px;
        z-index: 999;
        right: 0;
        bottom: 10px;
        margin: 0px;
        background: none;
        box-shadow: none;
        border: 0;
        margin-bottom: 20px;
      }
    }
  }
}
